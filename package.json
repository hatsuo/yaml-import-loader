{
    "name": "yaml-import-loader",
    "version": "1.3.5",
    "description": "A customizable YAML loader for Webpack supporting the '!import <file>' type to include different YAML files, and '!import-raw <file>' type to include the raw contents of any file.",
    "keywords": [
        "customizable",
        "import",
        "loader",
        "webpack",
        "yaml",
        "yml"
    ],
    "homepage": "https://github.com/ngfk/yaml-import-loader#readme",
    "bugs": {
        "url": "https://github.com/ngfk/yaml-import-loader/issues"
    },
    "license": "ISC",
    "author": "",
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "typings": "dist/index",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ngfk/yaml-import-loader.git"
    },
    "scripts": {
        "build": "npm run clean && tsc",
        "build:watch": "npm run build -- --watch",
        "check": "npm run clean && npm run test && npm run build",
        "clean": "rimraf ./dist",
        "prepublishOnly": "npm run check",
        "start": "npm run test:watch",
        "test": "mocha --compilers ts:ts-node/register test/**/*.spec.ts",
        "test:watch": "npm run test -- --watch --watch-extensions js,yml,yaml,json,html",
        "prettier": "prettier --write --ignore-path config/.prettierignore **/*",
        "preversion": "npm run check"
    },
    "dependencies": {
        "js-yaml": "^3.10.0",
        "loader-utils": "^1.1.0"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/js-yaml": "^3.9.1",
        "@types/mocha": "^2.2.43",
        "@types/mock-require": "^1.3.3",
        "@types/node": "^8.0.29",
        "chai": "^4.1.2",
        "mocha": "^3.5.3",
        "mock-require": "^2.0.2",
        "prettier": "^1.11.1",
        "rimraf": "^2.6.2",
        "ts-node": "^3.3.0",
        "typescript": "^2.5.2"
    }
}